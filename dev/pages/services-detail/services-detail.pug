extends ../../layouts/layout
block vars
block content
    include ../../components/consult-form
    include ../../components/standarts
    include ../../components/first-screen
    include ../../components/consult

    include ../../components/content/content
    include ../../components/content/blocks/content-map
    include ../../components/content/blocks/content-text

    include ../../modal-windows/modal
    .wrapper.service-detail-wrapper
        +first-screen({
          patternBgDesktop: './images/pattern-bg/services-desktop.svg',
          patternBgMobile: './images/pattern-bg/services-mobile.svg',
          title: 'Автомобильные перевозки',
          buttonText: 'Запросить консультацию'
        })
        .content-blocks
            +content({
              isFirst: true,
              rounded: true,
              title: 'Основные маршруты и направления',
              classes: 'content--bg-secondary',
            })
              +content-map
            +content({
              rounded: true,
              title: 'ВР ЛОГИСТИК — международная логистика для ваших грузов',
            })
                +content-text({
                  btn: true,
                  btnText: 'Оставить заявку',
                  btnModal: true
                })
            +content({
              rounded: true,
              title: 'Виды грузовых автоперевозок',
            })
                +content-text({
                  topTexts: ['Выбирая автоперевозки, вы всегда выбираете качество, быструю перевозку, недолгие работы по погрузке и разгрузке товаров, а также безопасность. Ваш груз будет в полной сохранности на всем пути.'],
                  tags: ['Малотоннажные', 'Крупнотоннажные', 'Негабаритные и тяжеловесные грузы', 'text', 'text 2', 'text 3', 'text 4']
                })
            +content({
              rounded: true,
              title: 'Преимущества автоперевозок',
            })
                +content-text({
                  topTexts: ['Кроме того, автоперевозки могут осуществляться сборным путем, что позволяет снизить конечную стоимость услуги. Компания VR LOGISTIC предлагает весь спектр услуг по автомобильным перевозкам: перевозки по Москве, России, Европе, Китаю, страхование товара, подготовка таможенной документации и оформление на постах, инспекцию и экспедирование.'],
                  unorderedList: [
                    'Оперативность',
                    'Транспортировка практически в любую точку и в удобное время',
                    'Груз будет доставлен точно по адресу',
                    'Вы сможете выбрать маршрут, который кажется наиболее подходящим',
                    'Провозка может быть выполнена по другому маршруту без ущерба оговоренным срокам',
                    'Предоставление товаро-сопроводительных и бухгалтерских документов Заказчику'
                  ]
                })

        +standarts
        +consult({classes: 'consult--page consult--white', btnText: 'Жду звонка'})
    +modal({ id: 'consult-form', classes: 'consult__form' })
        +consult-form
