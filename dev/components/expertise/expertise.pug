mixin expertise(props = defaultExpertiseProps, ...dataset)
  -
    const checkProps = {
      classes: props.classes ? props.classes : defaultExpertiseProps.classes,
      title: props.title ? props.title : defaultExpertiseProps.title,
      link: props.link ? props.link : defaultExpertiseProps.link,
      expertises: props.expertises ? props.expertises : defaultExpertiseProps.expertises,
    }
  include ../../ui/headline
  include expertise-item
  section.expertise(class=`${checkProps.classes}`)&attributes(...dataset)
    .container
      .expertise__inner
        if checkProps.title
          +headline({
            text: checkProps.title,
            link: checkProps.link
          })
        .expertise__list
          each item in checkProps.expertises
            +expertise-item(item)
