  section.feedback
    .container
      .feedback__top 
        +headline({ text: defaultFeedbackProps.headline.text , link: defaultFeedbackProps.headline.link, class: 'feedback__link' })
        +text({ variant: 'xs', weight: 'medium', text: defaultFeedbackProps.title, classes: 'feedback__title' })
      .feedback__swiper#gallery-container
        .swiper.feedback-swiper
          .swiper-wrapper
            each item in defaultFeedbackProps.items
              .swiper-slide
                +feedbackItem({ title: item.title, nameService: item.nameService, from: item.from, date: item.date, img: item.img, })
      .swiper-pagination.feedback-swiper-pagination
