mixin services-list(props = defaultServicesListProps, ...dataset)
  -
    const checkProps = {
        classes: props.classes ? props.classes : defaultServicesListProps.classes,
        list: props.list ? props.list : defaultServicesListProps.list,
    }

  include services-item-custom
  section.services-list(class=`${checkProps.classes}`)&attributes(...dataset)
      .container
          .services-list__inner
              each item in checkProps.list
                  +services-item-custom(item)
