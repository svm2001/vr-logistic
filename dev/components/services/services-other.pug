mixin services-other(props = defaultServicesOtherProps, ...dataset)
  -
    const checkProps = {
        classes: props.classes ? props.classes : defaultServicesOtherProps.classes,
        headline: props.headline ? props.headline : defaultServicesOtherProps.headline,
        title: props.title ? props.title : defaultServicesOtherProps.title,
        list: props.list ? props.list : defaultServicesOtherProps.list,
    }

  include ../../ui/btn
  include ../../ui/icon
  include ../../ui/text
  include ../../ui/headline
  include services-item-simple
  include ../globe
  section.services.services--other(class=`${checkProps.classes}`)&attributes(...dataset)
      .container
          .services__inner
              .services__top
                  +headline(checkProps.headline)
                  +text({
                      variant: 'xs',
                      weight: 'medium',
                      text: checkProps.title,
                      classes: 'services__title'
                  })
              .services__list
                 each item in checkProps.list
                   +services-item-simple(item)
